{
  "name": "upload-coverage-action",
  "version": "1.0.0",
  "description": "GitHub Action to upload coverage reports to Covera.gg",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "format": "prettier --write '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage"
  },
  "packageManager": "pnpm@10.18.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/covera-gg/upload-coverage-action.git"
  },
  "keywords": [
    "actions",
    "coverage",
    "testing",
    "code-coverage"
  ],
  "author": "Covera.gg",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@actions/glob": "^0.4.0",
    "@actions/http-client": "^2.2.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vercel/ncc": "^0.38.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "vitest": "^3.2.4"
  }
}
